{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Ultra Sports System Main",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/api/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": []
    },
    {
      "name": "Python: Data Acquisition",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/core/data_acquisition/api_manager.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: MLB Analyzer",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/sports/mlb/mlb_analyzer.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: NFL Analyzer",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/sports/nfl/nfl_analyzer.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Model Training",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/model_training.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Data Refresh",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/data_refresh.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Test Single File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Pytest Current File",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "FastAPI: Debug Server",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["api.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Node.js: React Dev Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/web_interface/node_modules/.bin/react-scripts",
      "args": ["start"],
      "cwd": "${workspaceFolder}/web_interface",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    }
  ]
}